.addImg {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: -250rpx;
  background-color: white;
  width: 100%;
  height: 280rpx;
  z-index: 7;
  border-radius: 25rpx 25rpx 0 0;
  overflow: hidden;
}

.cellImg {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.add {
  display: flex;
  flex-direction: row;
  margin: 50rpx 0 0 20rpx;
}

.phone {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 0 20rpx;
  margin-bottom: 20rpx;
}

.address {
  width: 560rpx;
  margin-right: 10rpx;
  word-break: break-all;
}

scroll-view {
  width: 100%;
  height: 60%;
  font-size: 30rpx;
}

.div {
  border: 1rpx solid rgba(218, 218, 218, 0.377);
}
.allword{
  font-size: large;
  display: flex;
  justify-content: center;
  position: relative;
  top: 40%;
  color: #00000086;
}