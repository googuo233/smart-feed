page {
  background-color: white;
  width: 100%;
  height: 100%;
}

.v1 {
  height: 100%;
}

.v2 {
  width: 95%;
  margin: 0 auto;
  margin-top: 5%;
  margin-bottom: 5%;
  background: white;
  border-radius: 24rpx;
  box-shadow: gray 0 0 50rpx -20rpx;
  padding-top: 1rpx;
}

.pic_info {
  width: 90%;
  border-radius: 24rpx;
  display: flex;
  margin: 0 auto;
  margin-top: 25rpx;
}

.pet_type,
.pet_breed,
.pet_sex,
.ownerDate,
.whether {
  margin-top: 15rpx;
  margin-left: 5rpx;
  position: relative;
}

.pet_name {
  margin-top: 15rpx;
  margin-left: 5rpx;
}

.v3 {
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.btn_Submit {
  background: linear-gradient(#0381ff, #1f4fdb);
  color: white;
  border-radius: 10rpx;
  font-size: large;
}

.v4 {
  margin-top: 40rpx;
  display: inherit;
}

.btn_Order {
  background: white;
  color: #1f4fdb;
  border-radius: 0rpx;
  font-size: large;
  padding-bottom: 20rpx;
}