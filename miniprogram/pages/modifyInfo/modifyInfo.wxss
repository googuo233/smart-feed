page {
  background-color: white;
  width: 100%;
  height: 100%;
}

.first {
  margin-top: 20rpx;
  width: 92%;
  height: 550rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0.5rpx 10rpx 10rpx rgb(221, 220, 220);
  padding-top: 35rpx;
  padding-left: 15rpx;
}

.second {
  margin-top: 40rpx;
  width: 92%;
  height: 480rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0.5rpx 10rpx 10rpx rgb(221, 220, 220);
  padding-top: 15rpx;
  padding-left: 15rpx;

}

.doginfo_title,
.ownerinfo_title {
  display: flex;
  flex-direction: row;

  font-weight: bold;
}

.ownerinfo_title {
  margin-top: 30rpx;
}

.divLine {
  margin-top: 7rpx;
  width: 10rpx;
  height: 35rpx;
  border-radius: 20rpx;
  background-color: blue;
  margin-left: 20rpx;
}

.doginfo {
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.info {
  margin-left: 30rpx;
  font-size: small;
  margin-top: 20rpx;
}

.picture {
  margin-top: 30rpx;
  width: 100%;
  height: 230rpx;
  font-size: small;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

image {
  margin-top: 40rpx;
  width: 200rpx;
  height: 150rpx;
  border-radius: 15rpx;
}

.describe {
  margin-left: 20rpx;
  padding-bottom: 50rpx;
}

.ownerinfo {

  margin-left: 30rpx;
}

.ownerinfo_name,
.ownerinfo_real,
.ownerinfo_add,
.ownerinfo_address {
  display: flex;
  flex-direction: row;
  font-size: small;
  margin-left: 50rpx;
}

.name {
  margin-top: 22rpx;
}

.name1 {
  font-size: small;
  margin-left: 50rpx;
  margin-top: 40rpx;
  width: 540rpx;
  word-break: break-all;
}

.icon {
  /* margin-top:20rpx; */
  position: relative;
  top: 20rpx;
  left: 20rpx;

}

.one {
  margin-top: 25rpx;
  font-size: small;


}

.btn {
  margin-top: 50rpx;
  color: white;
  font-size: large;
  border-radius: 0rpx;
  background: linear-gradient(#0381ff, #1f4fdb);
  margin-top: 90rpx;
}

.divLine_long {
  margin-top: 30rpx;
  width: 100%;
  height: 20rpx;
  background-color: rgba(134, 134, 134, 0.068);
}

.title,
.title1 {
  margin-left: 6rpx;
}